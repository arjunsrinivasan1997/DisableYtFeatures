{
  "manifest_version": 3,
  "name": "Disable YouTube Features",
  "version": "1.0",
  "description": "Adds ability to disable Ambient Mode and Stable Volume on Youtube.com",
  "content_scripts": [
    {
      "js": ["scripts/disable.js"],
      "matches": [
        "https://*.youtube.com/*"
      ]
    }
  ],
  "permissions": [
    "storage"
  ],
  "action": {
    "default_popup": "html/popup.html"
  },
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}